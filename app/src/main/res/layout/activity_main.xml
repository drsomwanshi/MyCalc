<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/txt1"
        android:textSize="14pt"
        android:textAlignment="viewEnd"

        ></TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="7"
            android:id="@+id/b7"
            android:textSize="14pt"
            android:onClick="numclick"
            ></Button>

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="8"
            android:id="@+id/b8"
            android:textSize="14pt"
            android:onClick="numclick"
            ></Button>

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="9"
            android:id="@+id/b9"
            android:textSize="14pt"
            android:onClick="numclick"
            ></Button>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="4"
            android:id="@+id/b4"
            android:textSize="14pt"
            android:onClick="numclick"
            ></Button>

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="5"
            android:id="@+id/b5"
            android:textSize="14pt"
            android:onClick="numclick"
            ></Button>

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="6"
            android:id="@+id/b6"
            android:textSize="14pt"
            android:onClick="numclick"
            ></Button>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="1"
            android:id="@+id/b1"
            android:textSize="14pt"
            android:onClick="numclick"
            ></Button>

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="2"
            android:id="@+id/b2"
            android:textSize="14pt"
            android:onClick="numclick"
            ></Button>

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="3"
            android:id="@+id/b3"
            android:textSize="14pt"
            android:onClick="numclick"
            ></Button>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="0"
            android:id="@+id/b0"
            android:textSize="14pt"
            android:onClick="numclick"
            ></Button>

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="00"
            android:id="@+id/b00"
            android:textSize="14pt"
            android:onClick="numclick"
            ></Button>

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="."
            android:id="@+id/bpt"
            android:textSize="14pt"
            android:onClick="numclick"
            ></Button>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="+"
            android:id="@+id/bp"
            android:textSize="14pt"
            android:onClick="opclick"
            ></Button>

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="-"
            android:id="@+id/bm"
            android:textSize="14pt"
            android:onClick="opclick"
            ></Button>

        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="*"
            android:id="@+id/bm1"
            android:textSize="14pt"
            android:onClick="opclick"
            ></Button>
        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:text="/"
            android:id="@+id/bd"
            android:textSize="14pt"
            android:onClick="opclick"
            ></Button>


    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:text="="
        android:id="@+id/beq"
        android:textSize="14pt"
        android:onClick="opeq"
        ></Button>




</LinearLayout>